<!DOCTYPE html>
<html lang="pt-br">
<head>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.js"></script>
    <meta content="Clínica de Psicologia da UNIFAAT - Melhor curso da região" name="description">
    <meta content="psicologia, UNIFAAT, curso, clínica" name="keywords">
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - AppUnipsico</title>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">
    <link rel="stylesheet" href="~/assets/css/argon-dashboard.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/assets/css/argon-dashboard.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/assets/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/assets/css/style.css" asp-append-version="true">
    <link rel="stylesheet" href="~/assets/css/nucleo-icons.css" asp-append-version="true">
    <link rel="stylesheet" href="~/AppUnipsico.styles.css" asp-append-version="true"/>
    <link href="~/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/assets/vendor/remixicon/remixicon.css" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-altura navbar-expand-sm navbar-toggleable-sm cor-unifaat box-shadow p-0 mb-5">
            <div class="container-fluid">
                <a asp-area="" asp-controller="Home" asp-action="Index"><img src="~/img/unifaat/logo-unipsico-branco.svg" class="logo-unipsico"></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex">
                    @await Html.PartialAsync("_LoginPartial")
                </div>
            </div>
        </nav>
    </header>
    <div id="verifica-se-tela-login" class="container">
        <main role="main" class="pb-3 mb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer-unifaat text-muted bg-white">
        <div class="container d-flex justify-content-center">
            <p class="text-justify fs-6 text-muted m-2">Desenvolvido por <strong>João Victor</strong> &amp; <strong>Renan Lima</strong></p>
            <p class="text-justify fs-6 text-muted m-2">&copy; 2024 - Todos os direitos reservados</p>
        </div>
    </footer>
    <script src="https://kit.fontawesome.com/42d5adcbca.js" crossorigin="anonymous"></script>
    <script src="~/assets/js/argon-dashboard.js"></script>
    <script src="~/assets/js/argon-dashboard.min.js"></script>
    <script src="~/assets/js/core/bootstrap.bundle.min.js"></script>
    <script src="~/assets/js/core/popper.min.js"></script>
    <script src="~/assets/js/core/bootstrap.min.js"></script>
    <script src="~/assets/js/site.js"></script>
    <script>
        // Seleciona todas as divs com a classe verifica-se-tela-login
        const divsLogin = document.querySelectorAll('#verifica-se-tela-login');

        divsLogin.forEach(divsLogin => {
            // Verifica se a div com o id verifica-se-tela-login contém uma div com a classe tela-login
            if (divsLogin.querySelector('.tela-login')) {
                // Adiciona a classe background-login ao body
                document.body.classList.add('background-login');
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
