@{
    ViewData["Title"] = "Estágio não encontrado";
}

<div class="container-fluid">
    <div class="p-3 mb-3">
        <h3 class="mb-3 text-left text-white responsividade-textos-cabecalho">Detalhes do estágio</h3>
    </div>
    <hr />
    <div class="d-flex justify-content-center">
        <div class="card col-4 text-center card-encontrar-estagio">
            <div class="card-header bg-warning p-1">
                <h3 class="text-white"><i class="fas fa-exclamation-triangle text-white"></i> Estágio não encontrado</h3>
            </div>
            <div class="card-body">
                <p class="text-center">O estágio que você está procurando não foi encontrado. Por favor, verifique o Id do estágio e tente novamente.</p>
                <div class="text-center">
                    <a asp-controller="Estagios" asp-action="Index" class="btn btn-outline-primary"><i class="fas fa-arrow-left"></i> Voltar para a busca de estágio</a>
                </div>
            </div>
        </div>
    </div>
</div>
