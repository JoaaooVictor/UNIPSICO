@model UsuarioDetalheViewModel
@{
    ViewData["Title"] = "Detalhes do usuário";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h4 class="text-center card-title">Detalhes do Usuário</h4>
                    <br />
                    <dl class="row">

                        <dt class="col-sm-4">Nome completo:</dt>
                        <dd class="col-sm-8">@Model.Usuario.NomeCompleto</dd>

                        @if (Model.Usuario.TipoUsuario == AppUnipsico.Enums.TipoUsuarioEnum.Aluno)
                        {
                            <dt class="col-sm-4">RA:</dt>
                            <dd class="col-sm-8">@Model.Usuario.RA</dd>
                        }

                        <dt class="col-sm-4">Cpf:</dt>
                        <dd class="col-sm-8">@Model.Usuario.Cpf</dd>

                        <dt class="col-sm-4">E-mail:</dt>
                        <dd class="col-sm-8">@Model.Usuario.Email</dd>

                        <dt class="col-sm-4">Data de nascimento:</dt>
                        <dd class="col-sm-8">@Model.Usuario.DataNascimento.ToShortDateString()</dd>

                        <dt class="col-sm-4">Data de registro no sistema:</dt>
                        <dd class="col-sm-8">@Model.Usuario.DataRegistro</dd>

                        <dt class="col-sm-4">Tipo de usuário:</dt>
                        <dd class="col-sm-8">@Model.Usuario.TipoUsuario
                        <dd>

                    </dl>
                    <div class="text-center">
                        <a class="btn btn-secondary" asp-action="Index">Voltar</a>
                    </div>
                </div>
            </div>
            <br />
        </div>
    </div>
    @if (Model.Consultas is not null && Model.Consultas.Any())
    {
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <h4 class="text-center card-title">Detalhes das consultas</h4>
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped">
                                <thead class="bg-primary text-white">
                                    <tr>
                                        <th>Data da consulta</th>
                                        <th>Horário da consulta</th>
                                        <th>Status da Consulta</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var consulta in Model.Consultas)
                                    {
                                        <tr>
                                            <td>@consulta.DataConsulta.Data.ToShortDateString()</td>
                                            <td>@consulta.DataConsulta.Data.ToShortTimeString()</td>
                                            <td>@consulta.StatusConsulta</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row justify-content-center mt-4">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <h4 class="text-center card-title">Mensagem</h4>
                        <p class="text-center">@Model.Mensagem</p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

