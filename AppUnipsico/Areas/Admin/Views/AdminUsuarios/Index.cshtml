@using AppUnipsico.Utillies
@model IEnumerable<AppUnipsico.Models.Usuario>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-4">
    <h1 class="mb-3 text-center">Listagem de usuários</h1>
    <br />
    <p>
        <a class="btn btn-primary form-control" asp-area="Admin" asp-controller="AdminUsuarios" asp-action="Register">Criar novo usuário</a>
    </p>
    <br />
    <div class="table-responsive">
        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th class="text-center">@Html.DisplayNameFor(model => model.NomeCompleto)</th>
                    <th class="text-center">@Html.DisplayNameFor(model => model.Cpf)</th>
                    <th class="text-center">@Html.DisplayNameFor(model => model.DataNascimento)</th>
                    <th class="text-center">@Html.DisplayNameFor(model => model.DataRegistro)</th>
                    <th class="text-center">@Html.DisplayNameFor(model => model.Email)</th>
                    <th class="text-center">@Html.DisplayNameFor(model => model.TipoUsuario)</th>
                    <th class="text-center">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">@Html.DisplayFor(modelItem => item.NomeCompleto)</td>
                        <td class="text-center">@Html.DisplayFor(modelItem => item.Cpf)</td>
                        <td class="text-center">@Html.DisplayFor(modelItem => item.DataNascimento)</td>
                        <td class="text-center">@Html.DisplayFor(modelItem => item.DataRegistro)</td>
                        <td class="text-center">@Html.DisplayFor(modelItem => item.Email)</td>
                        <td class="text-center">@Html.DisplayFor(modelItem => item.TipoUsuario)</td>
                        <td class="text-center">
                            <div class="btn-group" role="group">
                                <a class="btn btn-info" asp-action="DetalhesUsuario" asp-route-id="@item.Id">Detalhes</a>
                                <a class="btn btn-warning" asp-action="EditarUsuario" asp-route-id="@item.Id">Editar</a>
                                <a class="btn btn-danger" asp-action="DeletarUsuario" asp-route-id="@item.Id">Deletar</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
