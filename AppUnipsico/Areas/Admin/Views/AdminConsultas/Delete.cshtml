@model AppUnipsico.Models.Consulta

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Deletar Consulta</h4>

                    <p class="lead">Tem certeza de que deseja remover esta consulta?</p>

                    <dl class="row">
                        <dt class="col-sm-4">Data da Consulta:</dt>
                        <dd class="col-sm-8">@Model.DataConsulta.Data</dd>

                        <dt class="col-sm-4">Status da consulta:</dt>
                        <dd class="col-sm-8">@Model.StatusConsulta</dd>

                        <dt class="col-sm-4">Id do paciente:</dt>
                        <dd class="col-sm-8">@Model.UsuarioId</dd>

                        <dt class="col-sm-4">Nome completo do Paciente:</dt>
                        <dd class="col-sm-8">@Model.Usuario.NomeCompleto</dd>
                    </dl>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="ConsultaId" />
                        <div class="text-center">
                            <button type="submit" class="btn btn-danger mr-2">Deletar</button>
                            <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
