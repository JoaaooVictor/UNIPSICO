@model Consulta

@{
    ViewData["Title"] = "Detalhes da Consulta";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Detalhes da Consulta</h4>
                    <dl class="row">
                        <dt class="col-sm-4">Status da Consulta:</dt>
                        <dd class="col-sm-8">@Model.StatusConsulta</dd>

                        <dt class="col-sm-4">Nome do Usuário:</dt>
                        <dd class="col-sm-8">@Model.Usuario.NomeCompleto</dd>

                        <dt class="col-sm-4">CPF do Usuário:</dt>
                        <dd class="col-sm-8">@Model.Usuario.Cpf</dd>

                        <dt class="col-sm-4">Data de Nascimento do Usuário:</dt>
                        <dd class="col-sm-8">@Model.Usuario.DataNascimento</dd>

                        <dt class="col-sm-4">Tipo de Usuário:</dt>
                        <dd class="col-sm-8">@Model.Usuario.TipoUsuario</dd>

                        <dt class="col-sm-4">Data da Consulta:</dt>
                        <dd class="col-sm-8">@Model.DataConsulta.Data</dd>
                    </dl>
                    <form asp-controller="AdminConsultas" asp-action="DeletarConsultaConfirmada" method="post">
                        <input type="hidden" asp-for="ConsultaId" />
                        <div class="text-center">
                            <button type="submit" class="btn btn-danger mr-2">Deletar</button>
                            <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

