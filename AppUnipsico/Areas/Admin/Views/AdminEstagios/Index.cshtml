<div class="container mt-4">
    <h1 class="mb-3 text-center">Estágios</h1>
    <div class="row">
        <br />
        <p>
            <a class="btn btn-outline-success m-3 form-control rounded" asp-area="Admin" asp-controller="AdminEstagios" asp-action="CriarEstagio">Criar novo estágio</a>
        </p>
        <div class="col-md-12">
            <form asp-action="Index" method="get" class="mb-4">
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="dataInicio">Data de Início:</label>
                            <input type="date" class="form-control" id="dataInicio" name="dataInicio" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="dataFim">Data de Término:</label>
                            <input type="date" class="form-control" id="dataFim" name="dataFim" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="raAluno">RA do Aluno:</label>
                            <input type="text" class="form-control" id="raAluno" name="raAluno" placeholder="Digite o RA do aluno" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <button type="submit" class="btn btn-outline-primary mt-4">Filtrar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th class="text-center">Aluno</th>
                            <th class="text-center">Instituição</th>
                            <th class="text-center">Data de Início</th>
                            <th class="text-center">Data de Término</th>
                            <th class="text-center">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var estagio in Model)
                        {
                            <tr>
                                <td class="text-center">@estagio.Aluno.NomeCompleto</td>
                                <td class="text-center">@estagio.Instituicao.Nome</td>
                                <td class="text-center">@estagio.DataInicioEstagio.ToShortDateString()</td>
                                <td class="text-center">@estagio.DataFimEstagio.ToShortDateString()</td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a class="btn btn-outline-info m-1 rounded" asp-controller="AdminEstagios" asp-action="Detalhes" asp-route-EstagioId="@estagio.EstagioId">Detalhes</a>
                                        <a class="btn btn-outline-danger m-1 rounded" asp-controller="AdminEstagios" asp-action="GerarPdfEstagio" asp-route-EstagioId="@estagio.EstagioId">Gerar PDF</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
