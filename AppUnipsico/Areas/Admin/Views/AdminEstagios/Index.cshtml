@using AppUnipsico.Enums
@model List<Estagio>

@{
    ViewData["Title"] = "Estágios";
}

<div class="container-fluid">
    <div class="p-3 mb-3">
        <h3 class="mb-3 text-left" style="color: white">Estágios</h3>
    </div>
    <div class="text-center">
        <a class="btn text-center form-control btn-success w-50 btn" asp-action="CriarEstagio">Criar Estágio</a>
    </div>
    <form method="post">
        <div class="row justify-content-center mb-3">
            <br />
            <div class="col-md-2">
                <div class="form-group text-center text-white">
                    <label for="dataInicio">Data de Início:</label>
                    <input type="date" class="form-control" id="dataInicio" name="dataInicio" />
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-group text-center text-white">
                    <label class="text-center" for="raAluno">RA do Aluno:</label>
                    <input type="text" class="form-control" id="raAluno" name="raAluno" placeholder="Digite o RA do aluno" />
                </div>
            </div>
            <div class="col-md-2 align-self-end">
                <button type="submit" class="btn btn-outline-primary mt-2">Filtrar</button>
            </div>
        </div>
    </form>

    <br />
    <h3 class="text-left mb-3">Estágios Pendentes</h3>
    <div class="bg-light mb-4 p-5" style="border-radius: 15px">
        <div class="row justify-content-center">
            @foreach (var estagio in Model.Where(e => e.StatusEstagio == EstagioEnum.Solicitado))
            {
                <div class="col-md-2 mb-2 m-2">
                    <div class="card" style="border-top: 5px solid #e3b427">
                        <div class="card-body d-flex flex-column">
                            <div>
                                <p class="text-sm mb-0 text-uppercase font-weight-bold">@estagio.Aluno.NomeCompleto</p>
                                <h6 class="font-weight-bolder">@estagio.Instituicao.Nome</h6>
                                <p class="font-weight-bold text-xs mb-0">Data de Solicitação</p>
                                <p class="font-weight-bolder mb-0">@estagio.DataEstagio.ToShortDateString()</p>
                            </div>
                            <div class="text-center mt-2">
                                <a class="p-2" asp-controller="AdminEstagios" asp-action="Detalhes" asp-route-EstagioId="@estagio.EstagioId"><i class="fas fa-info-circle fa-lg" aria-hidden="true"></i></a>
                                <a class="p-2" asp-controller="AdminEstagios" asp-action="GerarPdfEstagio" asp-route-EstagioId="@estagio.EstagioId"><i class="fas fa-file-pdf fa-lg" aria-hidden="true"></i></a>
                                <a class="p-2" asp-controller="AdminEstagios" asp-action="AprovarEstagio" asp-route-EstagioId="@estagio.EstagioId"><i class="fas fa-thumbs-up fa-lg"></i></a>
                                <a class="p-2" asp-controller="AdminEstagios" asp-action="ReprovarEstagio" asp-route-EstagioId="@estagio.EstagioId"><i class="fas fa-thumbs-down fa-lg"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            }
            @if (!Model.Any(e => e.StatusEstagio == EstagioEnum.Solicitado))
            {
                <div class="col-md-12 text-center">
                    <p>Nenhum estágio pendente encontrado.</p>
                </div>
            }
        </div>
    </div>
    <br />
    <h3 class="text-left mb-3">Estágios Aprovados</h3>
    <div class="bg-light mb-4 p-5" style="border-radius: 15px">
        <div class="row justify-content-center">
            @foreach (var estagio in Model.Where(e => e.StatusEstagio == EstagioEnum.Aprovado))
            {
                <div class="col-md-2 mb-2 m-2">
                    <div class="card" style="border-top: 5px solid #2dce89">
                        <div class="card-body d-flex flex-column">
                            <div>
                                <p class="text-sm mb-0 text-uppercase font-weight-bold">@estagio.Aluno.NomeCompleto</p>
                                <h6 class="font-weight-bolder">@estagio.Instituicao.Nome</h6>
                                <p class="font-weight-bold text-xs mb-0">Data de Solicitação</p>
                                <p class="font-weight-bolder mb-0">@estagio.DataEstagio.ToShortDateString()</p>
                            </div>
                            <div class="mt-auto text-end">
                                <a asp-controller="AdminEstagios" asp-action="Detalhes" asp-route-EstagioId="@estagio.EstagioId"><i class="fas fa-info-circle fa-lg" aria-hidden="true"></i></a>
                                <a asp-controller="AdminEstagios" asp-action="GerarPdfEstagio" asp-route-EstagioId="@estagio.EstagioId"><i class="fas fa-file-pdf fa-lg" aria-hidden="true"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            }
            @if (!Model.Any(e => e.StatusEstagio == EstagioEnum.Aprovado))
            {
                <div class="col-md-12 text-center">
                    <p>Nenhum estágio aprovado encontrado.</p>
                </div>
            }
        </div>
    </div>
    <br />
    <h3 class="mb-3 text-left">Estágios Reprovados</h3>
    <div class="bg-light mb-4 p-5" style="border-radius: 15px">
        <div class="row justify-content-center">
            @foreach (var estagio in Model.Where(e => e.StatusEstagio == EstagioEnum.Reprovado))
            {
                <div class="col-md-2 mb-2 m-2">
                    <div class="card" style="border-top: 5px solid #f5365c">
                        <div class="card-body d-flex flex-column">
                            <div>
                                <p class="text-sm mb-0 text-uppercase font-weight-bold">@estagio.Aluno.NomeCompleto</p>
                                <h6 class="font-weight-bolder">@estagio.Instituicao.Nome</h6>
                                <p class="font-weight-bold text-xs mb-0">Data de Solicitação</p>
                                <p class="font-weight-bolder mb-0">@estagio.DataEstagio.ToShortDateString()</p>
                            </div>
                            <div class="mt-auto text-end">
                                <a asp-controller="AdminEstagios" asp-action="Detalhes" asp-route-EstagioId="@estagio.EstagioId"><i class="fas fa-info-circle fa-lg" aria-hidden="true"></i></a>
                                <a asp-controller="AdminEstagios" asp-action="GerarPdfEstagio" asp-route-EstagioId="@estagio.EstagioId"><i class="fas fa-file-pdf fa-lg" aria-hidden="true"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            }
            @if (!Model.Any(e => e.StatusEstagio == EstagioEnum.Reprovado))
            {
                <div class="col-md-12 text-center">
                    <p>Nenhum estágio reprovado encontrado.</p>
                </div>
            }
        </div>
    </div>
    @if (!Model.Any())
    {
        <div class="bg-light rounded text-center p-3">
            <h2 class="mb-3">Nenhum estágio encontrado</h2>
            <p>Não há nenhum estágio disponível no momento.</p>
        </div>
    }
</div>
