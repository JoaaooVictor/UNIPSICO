@model AlunoEstagioViewModel

<section class="tela-login">
    <div class="container py-5 h-100">
        <div class="row d-flex align-items-center justify-content-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card card-opacidade">
                    <div class="card-body p-5">
                        <h3 class="mb-5">Novo Estágio</h3>
                        <form asp-area="Aluno" asp-controller="Aluno" asp-action="SolicitarEstagio" method="post">
                            <div class="mb-4">
                                <input asp-for="DataEstagio" type="date" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                                <label asp-for="DataEstagio" class="form-label">Data do Estágio</label>
                                <span class="text-danger">@Html.ValidationMessageFor(model => model.DataEstagio)</span>
                            </div>
                            <div class="mb-4">
                                <input asp-for="AlunoRa" type="hidden" />
                                <input type="text" class="form-control" disabled value="@Model.Aluno.RA" />
                                <label class="form-label font-weight-bold">RA do Aluno</label>
                                <span class="text-danger">@Html.ValidationMessageFor(model => model.AlunoRa)</span>
                            </div>
                            <div class="mb-4">
                                <select asp-for="Instituicao.InstituicaoId" class="form-control">
                                    <option value="">Selecione a Instituição</option>
                                    @foreach (var instituicao in ViewBag.Instituicoes)
                                    {
                                        <option value="@instituicao.InstituicaoId">@instituicao.Nome</option>
                                    }
                                </select>
                                <span asp-validation-for="Instituicao.InstituicaoId" class="text-danger"></span>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn botoes-cor1 btn-block">Solicitar Estágio</button>
                                <a asp-area="Aluno" asp-controller="Home" asp-action="Index" class="btn text-center botoes-cor2">Voltar</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
