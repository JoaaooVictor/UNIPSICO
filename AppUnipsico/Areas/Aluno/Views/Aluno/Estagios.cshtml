@using AppUnipsico.Enums
@model List<Estagio>

@{
    ViewData["Title"] = "Estágios";
}

<div class="container-fluid">
    <div class="p-3 mb-3">
        <h3 class="mb-3 text-left" style="color: white">Estágios</h3>
    </div>
    <div class="text-center">
        <a class="btn btn-success rounded col-md-6" asp-controller="Aluno" asp-action="SolicitarEstagio">Solicitar estágio</a>
    </div>
    @if (Model.Any())
    {
        <br />
        <div class="row justify-content-center mb-4">
            <div class="col-md-8">
                <div class="card bg-light">
                    <div class="card-body">
                        <form asp-action="Estagios" method="get">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="dataInicio">Data de Início:</label>
                                        <input type="date" class="form-control" id="dataInicio" name="dataInicio" />
                                    </div>
                                </div>
                                <div class="col-md-6 align-self-end">
                                    <button type="submit" class="btn btn-outline-primary mt-4">Filtrar</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <h3 class="text-left mb-3">Estágios Aprovados</h3>
        <div class="bg-light mb-4 p-5" style="border-radius: 15px">
            <div class="row justify-content-center">
                @foreach (var estagio in Model.Where(e => e.StatusEstagio == EstagioEnum.Aprovado))
                {
                    <div class="col-md-2 mb-2 m-2">
                        <div class="card" style="border-top: 5px solid #2dce89">
                            <div class="card-body p-3">
                                <div class="row">
                                    <div class="col-8">
                                        <div>
                                            <p class="text-sm mb-0 text-uppercase font-weight-bold">@estagio.Aluno.NomeCompleto</p>
                                            <h6 class="font-weight-bolder">@estagio.Instituicao.Nome</h6>
                                            <p class="font-weight-bold text-xs mb-0">Data de Solicitação</p>
                                            <p class="font-weight-bolder mb-0">@estagio.DataEstagio.ToShortDateString()</p>
                                        </div>
                                    </div>
                                    <div class="col-3 text-end">
                                        <a type="button" asp-controller="Aluno" asp-action="Detalhes" asp-route-EstagioId="@estagio.EstagioId" class="btn btn-info mt-2"><i class="fas fa-info" aria-hidden="true"></i></a>
                                        <a type="button" asp-controller="Aluno" asp-action="GerarPdfEstagio" asp-route-EstagioId="@estagio.EstagioId" class="btn btn-danger"><i class="fas fa-file-pdf" aria-hidden="true"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                @if (!Model.Any(e => e.StatusEstagio == EstagioEnum.Aprovado))
                {
                    <div class="col-md-12 text-center">
                        <p>Nenhum estágio aprovado encontrado.</p>
                    </div>
                }
            </div>
        </div>
        <br />
        <h3 class="text-left mb-3">Estágios Pendentes</h3>
        <div class="bg-light mb-4 p-5" style="border-radius: 15px">
            <div class="row justify-content-center">
                @foreach (var estagio in Model.Where(e => e.StatusEstagio == EstagioEnum.Solicitado))
                {
                    <div class="col-md-2 mb-2 m-2">
                        <div class="card" style="border-top: 5px solid #e3b427">
                            <div class="card-body p-3">
                                <div class="row">
                                    <div class="col-8">
                                        <div>
                                            <p class="text-sm mb-0 text-uppercase font-weight-bold">@estagio.Aluno.NomeCompleto</p>
                                            <h6 class="font-weight-bolder">@estagio.Instituicao.Nome</h6>
                                            <p class="font-weight-bold text-xs mb-0">Data de Solicitação</p>
                                            <p class="font-weight-bolder mb-0">@estagio.DataEstagio.ToShortDateString()</p>
                                        </div>
                                    </div>
                                    <div class="col-3 text-end">
                                        <a type="button" asp-controller="Aluno" asp-action="Detalhes" asp-route-EstagioId="@estagio.EstagioId" class="btn btn-info mt-2"><i class="fas fa-info" aria-hidden="true"></i></a>
                                        <a type="button" asp-controller="Aluno" asp-action="GerarPdfEstagio" asp-route-EstagioId="@estagio.EstagioId" class="btn btn-danger"><i class="fas fa-file-pdf" aria-hidden="true"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                @if (!Model.Any(e => e.StatusEstagio == EstagioEnum.Solicitado))
                {
                    <div class="col-md-12 text-center">
                        <p>Nenhum estágio pendente encontrado.</p>
                    </div>
                }
            </div>
        </div>
        <br />
        <h3 class="mb-3 text-left">Estágios Reprovados</h3>
        <div class="bg-light mb-4 p-5" style="border-radius: 15px">
            <div class="row justify-content-center">
                @foreach (var estagio in Model.Where(e => e.StatusEstagio == EstagioEnum.Reprovado))
                {
                    <div class="col-md-2 mb-2 m-2">
                        <div class="card" style="border-top: 5px solid #f5365c">
                            <div class="card-body p-3">
                                <div class="row">
                                    <div class="col-8">
                                        <div>
                                            <p class="text-sm mb-0 text-uppercase font-weight-bold">@estagio.Aluno.NomeCompleto</p>
                                            <h6 class="font-weight-bolder">@estagio.Instituicao.Nome</h6>
                                            <p class="font-weight-bold text-xs mb-0">Data de Solicitação</p>
                                            <p class="font-weight-bolder mb-0">@estagio.DataEstagio.ToShortDateString()</p>
                                        </div>
                                    </div>
                                    <div class="col-3 text-end">
                                        <a type="button" asp-controller="Aluno" asp-action="Detalhes" asp-route-EstagioId="@estagio.EstagioId" class="btn btn-info mt-2"><i class="fas fa-info" aria-hidden="true"></i></a>
                                        <a type="button" asp-controller="Aluno" asp-action="GerarPdfEstagio" asp-route-EstagioId="@estagio.EstagioId" class="btn btn-danger"><i class="fas fa-file-pdf" aria-hidden="true"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                @if (!Model.Any(e => e.StatusEstagio == EstagioEnum.Reprovado))
                {
                    <div class="col-md-12 text-center">
                        <p>Nenhum estágio reprovado encontrado.</p>
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <div class="bg-light rounded text-center p-3">
            <h2 class="mb-3">Nenhum estágio encontrado</h2>
            <p>Não há nenhum estágio disponível no momento.</p>
        </div>
    }
</div>
